
@model List<TravelTripProject.Models.Sınıflar.iletisim>
@{
    ViewBag.Title = "MesajListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mesaj Listesi</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Kulllanıcı adı</th>
        <th>Mail</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Sil</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AdSoyad</td>
            <td>@x.Mail</td>
            <td>@x.Konu</td>
            <td>@x.Mesaj </td>
            <td><a href="/Admin/MesajSil/@x.ID" class="btn btn-outline-danger">Sil</a></td>



        </tr>
    }

</table>