@model TravelTripProject.Models.Sınıflar.Blog
@{
    ViewBag.Title = "BlogGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ID)
    <label>Kategori Adı</label>
    @Html.TextAreaFor(x => x.Baslik, new { @class = "form-control" })
    <br>
    <label>Tarih</label>
    @Html.TextAreaFor(x => x.Tarih, new { @class = "form-control" })
    <br>
    <label>Blog Fotoğrafı</label>
    @Html.TextAreaFor(x => x.BlogImage, new { @class = "form-control" })
    <br>
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br>

    <button class="btn btn-outline-success">Güncelle</button>







</form>
